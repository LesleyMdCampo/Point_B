%h5.search Search for Cities
= form_tag destination_search_path, :method => 'get' do
  .search-field= text_field_tag :search, params[:search]
  = submit_tag "Search", :name => nil

%br
%br
%br

%table
  %thead.dests
    %th.dests City
    %th.dests Country
    %th.dests Description
    %th.dests Category

  %tbody
  - @destinations.each do |destination|
    %tr
      %td= destination.city
      %td= destination.country
      %td= destination.description
      %td= destination.category
      / %td= link_to 'Show', user_destination_path(@user, @destination)
      / - if current_user.destinations.include?(destination)
      /   %td= link_to 'Edit', '#'
      /   %td= link_to 'Destroy', destination, :method => :delete, :data => { :confirm => 'Are you sure?' }
