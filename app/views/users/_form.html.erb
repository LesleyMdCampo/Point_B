<div class="small-12 medium-6 large-6 columns form">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.text_field :name, :autofocus => true, :placeholder => 'Name'  %>
    </div>
    <div class="field">
      <%= f.text_field :location, :placeholder => 'Location'  %>
    </div>
    <div class="field">
      <p>Profile Picture <%= f.file_field :profile_pic %></p>
    </div>
    <div class="field">
      <%= f.label "About Me" %>
      <%= f.text_area :bio %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <div class="link"><%= link_to 'Back', user_path %></div>
</div>