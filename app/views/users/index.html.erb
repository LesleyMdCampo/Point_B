<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Location</th>
      <th>Profile pic</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= user.location %></td>
        <td><img src="<%=  destination.album %>">
        <td><%= user.bio %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

