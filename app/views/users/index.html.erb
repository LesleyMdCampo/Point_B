<h1>Fellow Travelers</h1>

<table>
  <thead>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="user-list"><%= image_tag user.profile_pic %>
        <td><%= link_to "#{user.name}", user_path(user.id) %></td>
        <td><%= user.location %></td>
        <td><%= user.bio %></td>
        <% if current_user != nil %>
        <% end %>
          <% if current_user.friendships.find_by_friend_id(user.id) %>
          <td>Already Following</td>
          <% elsif user.id != current_user.id %>
          <td><%= link_to 'Follow', friendships_path(:friend_id => user), :method => :post %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
