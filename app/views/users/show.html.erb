<p id="notice"><%= notice %></p>
<div class="user">
  <h2><%= @user.name %></h2>
  
  <p>
    <img src="<%= @user.profile_pic.url(:large) %>">
  </p>
  
  <p>
    <strong>Age:</strong>
    <%= @user.age %>
  </p>
  
  <p>
    <strong>Location:</strong>
    <%= @user.location %>
  </p>
  
  <p>
    <strong>Bio:</strong>
    <%= @user.bio %>
  </p>
  <%= link_to 'Edit Profile', edit_user_path(@user) %><br />
</div>

<div class="row destination-index">
  <%= link_to 'Add Destination', new_user_destination_path(@user) %><br />
  <div class="small-1 medium-4 large-6 columns">
    <% @user.destinations.each do |dest| %>
      <div class="destination-individual">
        <h5><%= "#{dest.city}, #{dest.country}" %></h5>
        <img src="<%= dest.album%>">
        <p><%= dest.snippet %>
        <%= link_to 'Read More', dest %></p>
      </div>
   <% end %>
  </div>
</div>



