<p id="notice"><%= notice %></p>
<h2><%= @user.name %></h2>

<p>
  <%= image_tag(src: @user.profile_pic.url(:large)) %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>
<%= link_to 'Edit Profile', edit_user_path(@user) %><br />

<%= link_to 'Add Trip', edit_user_path(@user) %>

<div class="row trip-index">
  <div class="small-1 medium-4 large-6 columns">
    <% @user.trips.each do |trip| %>
      <div class="trip-individual">
        <h5><%= "#{trip.destination.city}, #{trip.destination.country}" %></h5>
      <p><%= "#{trip.destination.snippet}" %></p>
      </div>
   <% end %>
  </div>
</div>



